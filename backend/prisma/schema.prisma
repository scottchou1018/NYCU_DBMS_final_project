model User{
    userId      Int         @id @default(autoincrement())
    username    String      @unique
    password    String

    groups      Group[]
    teams       Team[]
}

model Group{
    groupId     Int         @id @default(autoincrement())
    groupName   String
    userId      Int

    user        User        @relation(fields: [userId], references: [userId], onDelete: Cascade)
    groupTeam   GroupTeam[]
}

model Team {
    teamId      Int         @id @default(autoincrement())
    teamName    String
    userId      Int

    user        User        @relation(fields: [userId], references: [userId], onDelete: Cascade)
    CFusers     CFuser[]
    groupTeam   GroupTeam[]
    participations Participation[]
}

model CFuser{
    CFuserId            Int         @id @default(autoincrement())
    handle              String      
    lastSubmissionId    Int
    teamId              Int
    team                Team        @relation(fields: [teamId], references: [teamId], onDelete: Cascade)

}

model Contest{
    contestId       Int         @id
    contestName     String
    participation  Participation[]
}

model ProblemResult{
    resultId        Int         @id @default(autoincrement())
    teamId          Int
    contestId       Int
    problemName     String
    problemIndex    String
    penalty         Int
    status          String
    triesCount      Int
    participation   Participation @relation(fields: [teamId, contestId], references: [teamId, contestId], onDelete: Cascade)
}

model Participation{
    teamId          Int
    contestId       Int
    ACcount         Int
    totalPenalty    Int

    team            Team    @relation(fields: [teamId], references: [teamId], onDelete: Cascade)
    contest         Contest @relation(fields: [contestId], references: [contestId], onDelete: Cascade)
    problemResults  ProblemResult[]
    @@id([teamId, contestId])
}


model GroupTeam{
    groupId     Int
    teamId      Int
    group       Group   @relation(fields: [groupId], references: [groupId], onDelete: Cascade)
    team        Team    @relation(fields: [teamId], references: [teamId], onDelete: Cascade)
    @@id([groupId, teamId])
}



generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}



